@model Product
@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-3">
        <img class="img-fluid" src="~/img/@Model.ImageUrl" alt="@Model.Name" />
    </div>
    <div class="col-md-9">
        <h1 class="mb-3">
            @Model.Name
        </h1>
        <hr />
        <a href="#" class="btn btn-link p-0 mb-3">Telefon</a>
        <div class="mb-3">
            <h4 class="text-primary mb-3">
                @Model.Price TL
            </h4>
            <button type="submit" class="btn btn-primary btn-lg">Add To Cart</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p class="p-3">
            </p>
        </div>
    </div>
</div>

